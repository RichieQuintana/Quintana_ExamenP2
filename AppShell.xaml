<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Quintana_AppApuntes.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Quintana_AppApuntes.Views"
    Shell.FlyoutBehavior="Flyout">
    
    <FlyoutItem Title="Notas" 
             Icon="{OnPlatform 'icon_notes.png', iOS='icon_notes_ios.png', MacCatalyst='icon_notes_ios.png'}">
            <ShellContent
            ContentTemplate="{DataTemplate views:AllNotesPage}" />
        </FlyoutItem>

     <FlyoutItem Title="Acerca De" 
             Icon="{OnPlatform 'icon_about.png', iOS='icon_about_ios.png', MacCatalyst='icon_about_ios.png'}">
            <ShellContent
            ContentTemplate="{DataTemplate views:AboutPage}" />
     </FlyoutItem>

     <FlyoutItem Title="Conteo de Caracteres" 
             Icon="{OnPlatform 'icon_conteocaracteres.png', iOS='icon_conteocaracteres_ios.png', MacCatalyst='icon_conteocaracteres_ios.png'}">
            <ShellContent
            ContentTemplate="{DataTemplate views:Calculo}" />
     </FlyoutItem>
    
</Shell>
